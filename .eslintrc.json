{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-comma-dangle": "off",
        "no-param-reassign": ["error", { "props": false }],
        "indent": ["error", 4],
        "no-use-before-define": ["error", { "functions": false }],
        "max-len": ["error", { "code": 150 }],
        "linebreak-style": 0
    },
    "plugins": ["jest"]
}
